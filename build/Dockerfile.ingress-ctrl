# Build proxy binary ----------------------------------
FROM golang:1.20-alpine AS build
WORKDIR /src
ARG VERSION=0.0.0
COPY . .
RUN CGO_ENABLED=0 go build -o /bin/ingress-ctrl \
  -ldflags "-X main.version=$VERSION" ./ingress-ctrl

# Copy to release image ----------------------------
FROM alpine:3.18
WORKDIR /app
COPY --from=build /bin/ingress-ctrl .
CMD ["/app/ingress-ctrl"]
