# Build proxy binary ----------------------------------
FROM golang:1.20-alpine AS build
WORKDIR /src
ARG VERSION=0.0.0
COPY . .
RUN CGO_ENABLED=0 go build -o /bin/proxy \
  -ldflags "-X main.version=$VERSION" ./proxy

# Copy to release image ----------------------------
FROM alpine
WORKDIR /app
COPY --from=build /bin/proxy .
EXPOSE 8080
ENV PORT=8080
CMD ["/app/proxy"]
